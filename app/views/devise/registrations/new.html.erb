
<h1>Let's Get Started!</h1>
  <div class="panel panel-default" style="width: 50%; padding: 0 25px;">  

    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
        <h2>Step 1</h2>
        <div id="tip">
        <p>Begin by adding some login information. <br />
            This will be used to sign in to your account, so keep it handy!</p>
        </div>
        <!-- fields for User object -->
        <%= f.text_field :username, autofocus: true %>
        <%= f.email_field :email %>
        <%= f.password_field :password , autocomplete: "off"%>
          <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>

      <br />
      <div class="actions">
        <%= f.submit "Next", :class => "btn btn-info", :style => 'margin-bottom: 25px;'%>
      </div>
      <% end %>
  </div>
</div>