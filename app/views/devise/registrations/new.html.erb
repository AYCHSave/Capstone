
<h1>Let's Get Started!</h1>
  <div class="panel panel-default formPanel">  

    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
        <h2>Step 1</h2>
        <div id="tip">
        <p>Begin by adding some login information. <br />
           <strong>This will be used to sign in to your account, so keep it handy!</strong></p>
        </div>
        <!-- fields for User object -->
        <%= f.text_field :username, autofocus: true, required: true, label: 'Username' %>
        <%= f.email_field :email, required: true, label: 'Email'  %>
        <%= f.password_field :password , autocomplete: "off", required: true, label: 'Password'  %>
          <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", required: true, label: 'Confirm Password' %>

      <br />
      <div class="actions">
        <ul id="formButtonGroup">
          <li><%= link_to 'Cancel', root_path, :class => "btn btn-danger formButton", data: {confirm: "Are you sure you want to cancel your registration? You'll have to start all over!"} %></li>
          <li><%= f.submit "Next", :class => "btn btn-success formButton"%></li>
        </ul>
      </div>
      <% end %>
  </div>
</div>